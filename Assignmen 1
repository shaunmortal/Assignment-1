        if a < d:
            smallest = a
        else:
            smallest = d
    else:
        if c < d:
            smallest = c
        else:
            smallest = d
else:
    if b < c:
        if b < d:
            smallest = b
        else:
            smallest = d
    else:
        if c < d:
            smallest = c
        else:
            smallest = d

print(f"The smallest number is: {smallest}")


